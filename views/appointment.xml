<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_appointment_form" model="ir.ui.view">
    <field name="name">om_hospital.appointment.form</field>
    <field name="model">om_hospital.appointment</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button id="button_confirm" class="btn-primary" string="Confirm"
            type="object" name="action_confirm" states="draft"
            confirm="Are you sure you want to confirm this appointment?" />
          <button id="button_done" class="btn-success" string="Mark as done"
            type="object" name="action_done" states="confirmed"
            confirm="Are you sure you want to mark this appointment as done?" />
          <button id="button_cancel" class="btn-danger" string="Cancel"
            type="object" name="action_cancel" states="draft,confirmed,done"
            confirm="Are you sure you want to cancel this appointment" />
          <button id="button_restore" class="btn-default" string="Restore as draft"
            type="object" name="action_restore" states="canceled"
            confirm="Are you sure you want to restore this appointment" />
          <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done" />
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="reference" />
            </h1>
          </div>
          <group>
            <group>
              <field name="patient_id" />
              <field name="age" readonly="1" />
              <field name="gender" readonly="1" />
              <field name="note" />
            </group>
            <group>
              <field name="appointment_date" />
              <field name="checkup_date" />
            </group>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" />
          <field name="activity_ids" />
          <field name="message_ids" />
        </div>
      </form>
    </field>
  </record>

  <record id="view_appointment_search" model="ir.ui.view">
    <field name="name">om_hospital.appointment.search</field>
    <field name="model">om_hospital.appointment</field>
    <field name="arch" type="xml">
      <search string="Appointments">
        <field name="patient_id" string="Patient" />
        <field name="note" string="Description" />
        <field name="appointment_date" string="Date" />
        <separator />
        <group expand="1" string="Group By">
          <filter string="Patient" name="patient" context="{ 'group_by': 'patient_id' }" />
          <filter string="Date" name="appointment_date" context="{ 'group_by': 'appointment_date' }" />
        </group>
      </search>
    </field>
  </record>

  <record id="view_appointment_tree" model="ir.ui.view">
    <field name="name">om_hospital.appointment.tree</field>
    <field name="model">om_hospital.appointment</field>
    <field name="arch" type="xml">
      <tree>
        <field name="reference" />
        <field name="patient_id" />
        <field name="note" />
        <field name="appointment_date" />
        <field name="state" />
      </tree>
    </field>
  </record>

  <record id="view_appointment_kanban" model="ir.ui.view">
    <field name="name">om_hospital.appointment.kanban</field>
    <field name="model">om_hospital.appointment</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_mobile">
        <field name="id" />
        <field name="reference" />
        <field name="patient_id" />
        <field name="note" />
        <field name="state" />
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_global_click">
              <div class="oe_kanban_details">
                <ul>
                  <li> Reference: <field name="reference" />
                  </li>
                  <li> Patient: <field name="patient_id" />
                  </li>
                  <li> Status: <field name="state" />
                  </li>
                  <li> Checkup Date: <field name="checkup_date" />
                  </li>
                  <li> Date: <field name="appointment_date" />
                  </li>
                </ul>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="action_hospital_appointment" model="ir.actions.act_window">
    <field name="name">Appointments</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">om_hospital.appointment</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context">{
      'search_default_patient': 1,
      }</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Click to create a new appointment.
      </p>
      <p class="oe_view_nocontent_help">
        You can manage your appointments here.
      </p>
    </field>
  </record>

  <menuitem id="hospital_appointment"
    name="Appointments"
    sequence="10"
    parent="hospital_appointment_root"
    action="action_hospital_appointment" />
</odoo>
